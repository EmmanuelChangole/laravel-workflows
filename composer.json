{
  "name": "changole/laravel-workflows",
  "description": "A Laravel-native workflow engine for modeling business processes with transitions, guards, and audit history.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Emmanuel Changole",
      "email": "manuchangole@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Changole\\Workflows\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Changole\\Workflows\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "illuminate/support": "^10.0|^11.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0",
    "pestphp/pest": "^2.0",
    "phpunit/phpunit": "^10.0"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Changole\\Workflows\\WorkflowServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
